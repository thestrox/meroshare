<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/symbollabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Symbol     : "
        android:textIsSelectable="false"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/symbollabel"
        android:layout_toEndOf="@id/symbollabel"
        android:textStyle="bold"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/namelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/symbol"
        android:text="Name        : "
        android:textSize="16dp" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/symbol"
        android:layout_toRightOf="@+id/namelabel"
        android:layout_toEndOf="@id/namelabel"
        android:textStyle="bold"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/sectorlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"
        android:text="Sector       : "
        android:textSize="16dp" />

    <TextView
        android:id="@+id/sector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/sectorlabel"
        android:layout_toEndOf="@id/sector"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/lastpricelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/sector"
        android:text="Last Price : "
        android:textSize="16dp" />

    <TextView
        android:id="@+id/lastprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/sector"
        android:layout_toRightOf="@+id/lastpricelabel"
        android:layout_toEndOf="@id/lastprice"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textSize="16dp" />



</RelativeLayout>